<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_tertiary</item>
    </style>

    <style name="btn_app">
        <item name="android:layout_width">@dimen/btn_app_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/app_button_accent_tertiary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">@dimen/btn_bot_padding</item>
        <item name="android:padding">@dimen/btn_padding</item>
    </style>

    <style name="btn_app_highlight" parent="btn_app">
        <item name="android:background">@drawable/app_button_accent_primary</item>
        <item name="android:textColor">@color/text_primary_inverse</item>
    </style>
</resources>
